{% extends 'base.html.twig' %}

{% block title %}
    Editer la vidéo
{% endblock %}

{% block body %}
    <!-- Begin Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Editer la vidéo</h1>
        <br>

        {{ form_start(form) }}
            {{ include('video/_form.html.twig') }}
            <div class="mb-4">
                <img src="{{ asset('images/videos/'~video.imageFile) }}" alt="{{ video.imageFile }}" class="img-fluid">
            </div>
            <button type="submit" class="btn btn-primary">Editer</button>
        {{ form_end(form) }}

    </div>
    <!-- /.container-fluid -->
{% endblock %}

