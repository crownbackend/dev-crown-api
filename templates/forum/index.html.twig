{% extends "base.html.twig" %}

{% block title %}Liste des forums{% endblock %}

{% block body %}
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Liste des forums</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="TechnologyTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Description</th>
                            <th>Nombre de topics</th>
                            <th>action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for forum in forums %}
                            <tr>
                                <td>{{ forum.name }}</td>
                                <td title="{{ forum.description }}">{{ forum.description|slice(0,50) }}</td>
                                <td>{{ forum.topics|length }}</td>
                                <td>
                                    <a href="{{ path('admin_forum_show', {"id": forum.id}) }}" class="btn btn-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_forum_edit', {"id": forum.id}) }}" class="btn btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{{ path('admin_forum_delete', {"id": forum.id}) }}" onclick="return confirm('Ceci va supprimer l\'element')" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
{% endblock %}